{
  "version": 2,
  "selection_strategy": "random",
  "two_lane_selection": {
    "friction_first": true,
    "scout_lane_enabled": true
  },
  "default_gates": [
    "build",
    "test",
    "fmt",
    "clippy"
  ],
  "gate_commands": {
    "build": "cargo build --verbose",
    "test": "CI=true cargo test --verbose",
    "fmt": "cargo fmt -- --check",
    "clippy": "cargo clippy -- -D warnings",
    "doctest": "cargo test --doc --verbose",
    "examples": "cargo test --examples --verbose",
    "features_none": "cargo build --no-default-features --verbose",
    "features_all": "cargo build --all-features --verbose",
    "audit": "cargo audit",
    "deny": "cargo deny check"
  },
  "persona_default_gates": {
    "palette": [
      "test",
      "fmt",
      "clippy"
    ],
    "bolt": [
      "test",
      "fmt",
      "clippy"
    ],
    "security": [
      "test",
      "fmt",
      "clippy"
    ],
    "quality": [
      "test",
      "doctest",
      "fmt",
      "clippy"
    ],
    "docs": [
      "doctest",
      "examples",
      "fmt"
    ],
    "compat": [
      "features_none",
      "features_all",
      "test"
    ],
    "deps": [
      "test",
      "fmt",
      "clippy"
    ]
  },
  "pr_title_style": {
    "format": "<type>: <summary> <suffix>",
    "suffixes": {
      "palette": "\ud83c\udfa8 Palette",
      "bolt": "\u26a1 Bolt",
      "security": "\ud83d\udee1\ufe0f Sentinel",
      "quality": "\ud83e\uddea Gatekeeper",
      "docs": "\ud83d\udcda Librarian",
      "compat": "\ud83e\uddf7 Compat",
      "deps": "\ud83e\uddfe Auditor"
    }
  },
  "notes_write_threshold": "only_when_reusable_pattern_discovered",
  "run_log_max_lines": 200,
  "unwrap_expect_burn_down": {
    "goal": "ban_everywhere",
    "scope_guidance": "prefer_fixing_in_touched_area; allow_dedicated_burn_down_tasks"
  }
}
