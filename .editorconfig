# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust: 4 spaces (per rustfmt defaults)
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML: 4 spaces (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# YAML: 2 spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON: 2 spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# GitHub Actions
[.github/**/*.yml]
indent_style = space
indent_size = 2

# Lock files - don't modify
[Cargo.lock]
indent_style = space
indent_size = 4
