{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tokmd.dev/schemas/envelope.v1.json",
  "title": "tokmd Ecosystem Envelope",
  "description": "Standardized report format for multi-sensor integration",
  "type": "object",
  "required": ["envelope_version", "tool", "generated_at", "verdict", "summary", "findings"],
  "properties": {
    "envelope_version": {
      "type": "integer",
      "const": 1
    },
    "tool": { "$ref": "#/definitions/EnvelopeTool" },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "verdict": { "$ref": "#/definitions/Verdict" },
    "summary": { "type": "string" },
    "findings": {
      "type": "array",
      "items": { "$ref": "#/definitions/Finding" }
    },
    "gates": { "$ref": "#/definitions/GatesEnvelope" },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "#/definitions/Artifact" }
    },
    "data": {}
  },
  "definitions": {
    "EnvelopeTool": {
      "type": "object",
      "required": ["name", "version", "mode"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "mode": { "type": "string" }
      }
    },
    "Verdict": {
      "type": "string",
      "enum": ["pass", "fail", "warn", "skip", "pending"]
    },
    "Finding": {
      "type": "object",
      "required": ["id", "severity", "title", "message"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z]+\\.[a-z_]+\\.[a-z_]+$" },
        "severity": { "$ref": "#/definitions/FindingSeverity" },
        "title": { "type": "string" },
        "message": { "type": "string" },
        "location": { "$ref": "#/definitions/FindingLocation" },
        "evidence": {},
        "docs_url": { "type": "string", "format": "uri" }
      }
    },
    "FindingSeverity": {
      "type": "string",
      "enum": ["error", "warn", "info"]
    },
    "FindingLocation": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "line": { "type": "integer", "minimum": 1 },
        "column": { "type": "integer", "minimum": 1 }
      }
    },
    "GatesEnvelope": {
      "type": "object",
      "required": ["status", "items"],
      "properties": {
        "status": { "$ref": "#/definitions/Verdict" },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/GateItem" }
        }
      }
    },
    "GateItem": {
      "type": "object",
      "required": ["id", "status"],
      "properties": {
        "id": { "type": "string" },
        "status": { "$ref": "#/definitions/Verdict" },
        "threshold": { "type": "number" },
        "actual": { "type": "number" },
        "reason": { "type": "string" },
        "source": { "type": "string" },
        "artifact_path": { "type": "string" }
      }
    },
    "Artifact": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": { "type": "string" },
        "path": { "type": "string" }
      }
    }
  }
}
